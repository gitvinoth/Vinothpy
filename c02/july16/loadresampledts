# COMMAND ----------

resample_gold_dts(
    spark,
    logger,
    "`ccus_dd40badc-44a8-4c24-994a-ab80edc83478_dev_03`.silver_zone.dts1",
    "asset_id",
    "`ccus_dd40badc-44a8-4c24-994a-ab80edc83478_dev_03`.gold_zone.dts_60",
    60
)
